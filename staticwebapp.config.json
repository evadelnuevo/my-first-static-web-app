{
    "routes": [
    {
      "route": "/images/*",
      "headers": {
        "cache-control": "must-revalidate, max-age=15770000"
      }
    },
    {
      "route": "/user",
      "rewrite": "/.auth/me"
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/identityServer"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    }
  ],
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "myProvider": {
          "registration": {
            "clientIdSettingName": "bff",
            "clientCredential": {
              "clientSecretSettingName": "secret"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://red-identity.niposoftware-dev.com/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "scopes": ["openid", "profile", "email", "roles", "nfieldDomain", "resourceRoles", "clientOrigin"],
            "loginParameterNames": []
          }
        }
      }
    }
  }
}